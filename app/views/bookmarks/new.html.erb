<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-gradient p-4 rounded shadow-lg">
        <h3 class="text-center mb-4">Create a new list</h3>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <div class="form-group">
          <%= f.association :movie,
                            collection: Movie.all.order(:title),
                            prompt: "Select a movie",
                            input_html: { class: 'form-control custom-input' }
          %>
          </div>
          <div class="form-group">
          <%= f.input :comment,
                       placeholder: "Enter a comment about the movie",
                       input_html: { class: 'form-control custom-input' }
          %>
          </div>
          
          <div class="d-flex justify-content-between">
            <%= link_to 'Back', lists_path(@list), class: 'btn btn-custom' %>
            <%= f.submit '+ Movie', class: 'btn btn-custom' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
