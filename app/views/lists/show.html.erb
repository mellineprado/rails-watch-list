<div class="position-relative">
  <div class="card-category card-large" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('movie-list.jpg') %>)">
    <h1 class="animated-title"><%= @list.name %></h1>
  </div>
  <span class="movie-tag"><%= pluralize(@list.movies.size, "movie") %></span>
</div>

<div class="container mb-5">
  <%= link_to 'Back to list', lists_path, class: 'btn btn-custom mt-4' %>
  <div class="d-flex justify-content-between my-4">
    <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
    <div>
      <button type="button" class="btn btn-custom" data-bs-toggle="modal" data-bs-target="#new_movie_modal">
        + Movie
      </button>
      <%= link_to "Delet this list",
                   list_path(@list),
                   class: "btn btn-custom",
                   data: {
                    turbo_method:
                    :delete,
                    turbo_confirm: "Are you sure you want to delete this list?"
                   }
      %>
    </div>
  </div>

  <div class="d-flex align-items-center my-4">
    <i class="fas fa-eye fa-lg me-2"></i>
    <h3 class="mb-0">Watched Movies</h3>
  </div>
  <hr class="my-5">

  <%#= List with film categories %>
  <div class="row my-2">
    <%= render 'lists/list', list: @list %>
  </div>

  <%#= Reviews  %>
  <%= render 'lists/reviews', list: @list, review: @review  %>
</div>

<%= render "bookmarks/modal", list: @list, bookmark: @bookmark %>
