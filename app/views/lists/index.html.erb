<div class="cover-lists mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1 class="animated-title">Save Any Kind of Movies</h1>
    <p class="mt-3">
      Organize your favorite movies into personalized lists and never lose track of what to watch next!
    </p>
  </div>
</div>

<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-4">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a Movie List", new_list_path, class: "btn btn-custom" %>
  </div>

  <% if @lists.empty? %>
    <div class="text-center py-5">
      <i class="fas fa-folder-open fa-3x text-muted mb-3"></i>
      <p class="text-muted">
        You haven't created any movie lists yet. Start organizing your movies now!
      </p>
    </div>
  <% else %>
    <div class="row">
      <% @lists.each do |list| %>
        <div class="col-12 col-sm-6 col-md-4 mb-4">
          <div class="card-category shadow-lg position-relative overflow-hidden"
               style="background-image: url('<%= list.photo.attached? ? url_for(list.photo) : asset_path('movie-list.jpg') %>');">

            <%= link_to edit_list_path(list), class: "edit-icon position-absolute top-0 end-0 m-2 text-white" do %>
              <i class="fas fa-edit fa-lg"></i>
            <% end %>

            <%= link_to list_path(list), class: 'text-decoration-none h-100 w-100 d-block' do %>
              <div class="card-overlay d-flex flex-column justify-content-center align-items-center text-white">
                <h5 class="text-uppercase font-weight-bold mb-2"><%= list.name %></h5>
                <small><%= pluralize(list.movies.size, "movie") %> saved</small>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
