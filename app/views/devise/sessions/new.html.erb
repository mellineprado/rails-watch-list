<div class="form-single-container">
  <div class="container text-center">
    <!-- App Logo and Name -->
    <div>
      <h1 class="py-3 app-title">
        <span>ðŸŽ¬</span> Watch List</span>
      </h1>
    </div>

    <!-- Login Form -->
    <div>
      <p>Log in to access your personalized movie collection.</p>
      <%= simple_form_for [resource], as: resource_name, url: session_path(resource_name) do |f| %>
        <%= f.error_notification %>
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", placeholder: "Email", class: 'form-input' }
          %>
        </div>
        <div class="form-group">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", placeholder: "Password", class: 'form-input' }
          %>
        </div>
        <div>
          <%= f.label :remember_me do %>
            <%= f.input_field :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%= t 'activerecord.attributes.customer.remember_me' %>
          <% end %>
        </div>
        <div>
          <%= f.button :submit, 'Log in', class: 'btn btn-custom mt-2 mb-2' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
