<div class="form-single-container">
  <div class="container">
    <h1 class="py-3">Sign Up</h1>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="row">
        <%= f.input :first_name,
                    required: true,
                    wrapper_html: { class: 'col-12' },
                    input_html: { class: 'form-input' }
        %>
        <%= f.input :last_name,
                    required: true,
                    wrapper_html: { class: 'col-12' },
                    input_html: { class: 'form-input' }
        %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    wrapper_html: { class: 'col-12' },
                    input_html: { autocomplete: "email", class: 'form-input' }
        %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    wrapper_html: { class: 'col-12' },
                    input_html: { autocomplete: "new-password", class: 'form-input' }
        %>
        <%= f.input :password_confirmation,
                    required: true,
                    wrapper_html: { class: 'col-12' },
                    input_html: { autocomplete: "new-password", class: 'form-input' }
        %>
      </div>
      <div class="row mb-2 justify-content-center">
        <%= f.button :submit, "Sign Up", class: 'btn btn-custom mt-4' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
